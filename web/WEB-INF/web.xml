<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>createCustomer</servlet-name>
        <servlet-class>appLogic.createClient</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>createServiceman</servlet-name>
        <servlet-class>appLogic.createTower</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>requestService</servlet-name>
        <servlet-class>appLogic.requestService</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createCustomer</servlet-name>
        <url-pattern>/createCustomer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createServiceman</servlet-name>
        <url-pattern>/createServiceman</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>requestService</servlet-name>
        <url-pattern>/requestService</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
