<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>client.controller.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registerClient</servlet-name>
        <servlet-class>client.controller.RegisterClient</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registerTower</servlet-name>
        <servlet-class>client.controller.RegisterTower</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>requestService</servlet-name>
        <servlet-class>client.controller.requestService</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>client.controller.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateClient</servlet-name>
        <servlet-class>client.controller.updateClient</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateTower</servlet-name>
        <servlet-class>client.controller.updateTower</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Service</servlet-name>
        <servlet-class>client.controller.Service</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registerClient</servlet-name>
        <url-pattern>/registerClient</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registerTower</servlet-name>
        <url-pattern>/registerTower</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>requestService</servlet-name>
        <url-pattern>/requestService</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateClient</servlet-name>
        <url-pattern>/updateClient</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateTower</servlet-name>
        <url-pattern>/updateTower</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Service</servlet-name>
        <url-pattern>/Service</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
